            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:text="Calculated total ="
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/km_eta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="2.4km - eta 20min4km - eta 35min"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ValueCalculationTotal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="59dp"
            android:text="Value Calculation"
            android:textColor="#39FF14"
            android:textSize="10sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/NextButtonComparison2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="342dp"

            android:baselineAlignBottom="false"
