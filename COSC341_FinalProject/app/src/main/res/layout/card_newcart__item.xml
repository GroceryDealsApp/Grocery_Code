<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="390dp"
    android:layout_height="90dp"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="1dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:visibility="visible"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:background="#00897B">

        <Button
            android:id="@+id/deletenewItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Weight1"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/Weight1"
            android:backgroundTint="#800303"
            android:backgroundTintMode="add"
            android:text="Delete"
            android:textSize="14sp"
            app:cornerRadius="10dp" />

        <TextView
            android:id="@+id/Weight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item1"
            android:layout_marginStart="73dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/itemImage1"
            android:text="Weight"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/Item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:text="Block A"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/itemImage1"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:layout_below="@+id/Item1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_border" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>